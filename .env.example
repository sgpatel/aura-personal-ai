# --- General ---
LOG_LEVEL=INFO

# --- Database ---
# Example for PostgreSQL:
DATABASE_URL=postgresql://your_db_user:your_db_password@localhost:5432/aura_db

# --- Security ---
# Generate using: python -c 'import secrets; print(secrets.token_hex(32))'
SECRET_KEY=your_strong_generated_secret_key_here

# --- LLM Configuration ---
# Choose default: "openai", "gemini", "ollama"
DEFAULT_LLM_PROVIDER="openai"

# OpenAI Settings (Required if DEFAULT_LLM_PROVIDER="openai")
OPENAI_API_KEY="sk-..."

# Google Gemini Settings (Required if DEFAULT_LLM_PROVIDER="gemini")
GOOGLE_API_KEY="..."

# Ollama Settings (Required if DEFAULT_LLM_PROVIDER="ollama")
OLLAMA_BASE_URL="http://localhost:11434" # Default Ollama API URL
OLLAMA_DEFAULT_MODEL="llama3" # Or mistral, etc.
